                            <th>Nome</th>
                            <th>E-mail</th>
                            <th>Telefone</th>
                            <th>Tipo</th>
                            <th>A√ß√µes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td>#@usuario.Id</td>
                                <td>
                                    <strong>@usuario.Nome</strong>
                                    @if (usuario.Id == usuarioLogadoId)
                                    {
                                        <span class="badge badge-admin">Voc√™</span>
                                    }
                                </td>
                                <td>@usuario.Email</td>
                                <td>@usuario.Contato</td>
                                <td>
                                    @if (usuario.IsAdmin)
                                    {
                                        <span class="badge badge-admin">Administrador</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-user">Usu√°rio</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Editar", "Usuario", new { id = usuario.Id })" class="btn-action btn-edit">
                                        ‚úèÔ∏è Editar
                                    </a>
                                    <a href="@Url.Action("Apagar", "Usuario", new { id = usuario.Id })" class="btn-action btn-delete">
                                        üóëÔ∏è Apagar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">üë•</div>
                <h3>Nenhum usu√°rio cadastrado</h3>
                <p>Comece a adicionar usu√°rios para sua empresa.</p>
                <a href="@Url.Action("Criar", "Usuario")" class="btn-add">
                    ‚ûï Cadastrar Primeiro Usu√°rio
                </a>
            </div>
        }
    </div>
</div>

