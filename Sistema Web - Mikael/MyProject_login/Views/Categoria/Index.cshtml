@model IEnumerable<MyProject.Models.CategoriaModel>

@{
    ViewData["Title"] = "Gerenciar Categorias";
}

<div class="container">
    <h1 class="display-4 mb-4">Gerenciar Categorias</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Adicionar Nova Categoria</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
