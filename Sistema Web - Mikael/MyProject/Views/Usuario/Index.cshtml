@model List<MyProject.Models.UsuarioModel>

@{
    ViewData["Title"] = "Gerenciamento de Usu√°rios";
    var usuarioLogadoNome = Context.Session.GetString("UsuarioLogadoNome");
    var usuarioLogadoId = Context.Session.GetInt32("UsuarioLogadoId");
    var usuarioLogadoIsAdmin = Context.Session.GetString("UsuarioLogadoIsAdmin") == "True";
}

<link rel="stylesheet" href="~/css/plans_and_auth.css" asp-append-version="true" />

<div class="usuarios-container">
    <!-- Header Section -->
    <div class="header-section">
        <h1>Gerenciamento de Usu√°rios</h1>

        @if (usuarioLogadoId.HasValue)
        {
            <div class="user-info">
                <div class="user-info-item">
                    <span class="user-info-label">Usu√°rio Logado:</span>
                    <span>
                        @usuarioLogadoNome
                        @if (usuarioLogadoIsAdmin)
                        {
                            <span class="badge badge-admin">Administrador</span>
                        }
                        else
                        {
                            <span class="badge badge-user">Usu√°rio</span>
                        }

                    </span>
                </div>
            </div>
        }

        <div class="header-actions">
            @if (usuarioLogadoIsAdmin)
            {
                <a href="@Url.Action("CriarUsuario", "Usuario")" class="btn-custom btn-primary-custom">
                    ‚ûï Adicionar Novo Usu√°rio
                </a>
            }
        </div>
    </div>

    <!-- Content Section -->
    <div class="content-section">
        @if (Model != null && Model.Any())
        {
            <div class="content-header">
                <h2>Usu√°rios Cadastrados (@Model.Count)</h2>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>E-mail</th>
                            <th>Telefone</th>
                            <th>Tipo</th>
                            <th>A√ß√µes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td>#@usuario.Id</td>
                                <td>
                                    <strong>@usuario.Nome</strong>
                                    @if (usuario.Id == usuarioLogadoId)
                                    {
                                        <span class="badge badge-admin">Voc√™</span>
                                    }
                                </td>
                                <td>@usuario.Email</td>
                                <td>@usuario.Contato</td>
                                <td>
                                    @if (usuario.IsAdmin)
                                    {
                                        <span class="badge badge-admin">Administrador</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-user">Usu√°rio</span>
                                    }
                                </td>
                                @usuarioLogadoNome
                                @if (usuarioLogadoIsAdmin)
                                {
                               <td >
                                    <a asp-controller="Usuario" asp-action="Editar" asp-route-id="#@usuario.Id" class="text-center btn-action btn-edit rounded-2">
                                        ‚úèÔ∏è Editar
                                    </a>
                                    <a asp-controller="Usuario" asp-action="Apagar" asp-route-id="#@usuario.Id" class="btn-action btn-delete rounded-2">
                                        üóëÔ∏è Apagar
                                    </a>
                                </td>

                                }
                                else
                                {
                                    <td>
                                        <a asp-controller="Usuario" asp-action="Editar" asp-route-id="#@usuario.Id" class="btn-action btn-edit rounded-2">
                                            ‚úèÔ∏è Editar
                                        </a>
                                    </td>
                                }

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">üë•</div>
                <h3>Nenhum usu√°rio cadastrado</h3>
                <p>Comece a adicionar usu√°rios para sua empresa.</p>
                <a href="@Url.Action("CriarAdmin", "Usuario")" class="btn-add">
                    ‚ûï Cadastrar Primeiro Usu√°rio
                </a>
            </div>
        }
    </div>
</div>

