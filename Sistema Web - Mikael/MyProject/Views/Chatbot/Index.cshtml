@model MyProject.Models.PerguntaModel

@{
    ViewData["Title"] = "Chat com IA";
}

<div class="container mt-5">
    <h2>Chat com IA</h2>

    <form asp-action="Index" method="post">
        <div class="mb-3">
            <label asp-for="Pergunta" class="form-label">Pergunta</label>
            <input asp-for="Pergunta" class="form-control" placeholder="Digite sua pergunta" />
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Resposta))
    {
        <div class="mt-4 p-3 border rounded bg-light">
            <strong>Resposta da IA:</strong>
            <p>@Model.Resposta</p>
        </div>
    }
</div>
