@{
    Layout = null;
    ViewData["Title"] = "Login - HelpDesk";
}

<link rel="stylesheet" href="~/css/plans_and_auth.css" asp-append-version="true" />
<body class="login-page-body">

<div class="login-container">
    <!-- Header -->
    <div class="login-header">
        <h1>HelpDesk - Ads</h1>
        <p>Faça login para acessar o sistema</p>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(ViewBag.Erro))
    {
        <div class="error-message">
            @ViewBag.Erro
        </div>
    }

    <!-- Login Form -->
    <form asp-action="Login" method="post">
        <!-- Email -->
        <div class="form-group">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="seu.email@empresa.com" required>
            <div class="form-text">Digite o e-mail cadastrado na sua conta.</div>
        </div>

        <!-- Senha -->
        <div class="form-group">
            <label for="senha" class="form-label">Senha</label>
            <input type="password" id="senha" name="senha" class="form-control" placeholder="Digite sua senha" required>
            <div class="form-text">Digite sua senha de acesso.</div>
        </div>

        <!-- Login Button -->
        <button type="submit" class="login-button">Entrar</button>
    </form>

    <!-- Footer -->
    <div class="login-footer">
        <p>Não tem uma conta?</p>
        <a asp-controller="Home" asp-action="Index" >Voltar para os planos</a>
    </div>


</div>
</body>

