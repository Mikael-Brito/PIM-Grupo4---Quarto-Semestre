<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelpDesk - Ads</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/plans_and_auth.css" asp-append-version="true" />
</head>
<body>

    @{
    var usuarioLogadoId = Context.Session.GetInt32("UsuarioLogadoId");
    var usuarioLogadoNome = Context.Session.GetString("UsuarioLogadoNome");
}


@if (usuarioLogadoId.HasValue)
{   
        // Se estiver logado, exibe o menu completo
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow">
                <div class="container">

                    <a class="navbar-brand" href="#">
                        <img src="/Img/Icon Blue.jpg" alt="Bootstrap" width="30" height="24" class="d-inline-block align-text-top">
                        HelpDesk - Ads
                    </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Planos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">Gerenciar Usuários</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Chamado" asp-action="Index">Chamados Abertos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Chatbot" asp-action="Index">Chatbot</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mais
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privado</a><li/>
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="SobreNos">Sobre Nós</a><li/>
                                <li><a class="dropdown-item" asp-controller="Categoria" asp-action="Index">Categorias</a><li/>
                            </ul>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Olá, @usuarioLogadoNome
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Logout">Sair</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
}
else
{
    // Se não estiver logado, exibe apenas a página inicial (planos)
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/Icon Blue.jpg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                    HelpDesk - Ads
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Login">Fazer Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
}

    <div class="container text-dark pt-2">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white">
        <div class="container">
            &copy; 2025 - HelpDesk - Ads - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
