@model MyProject.Models.ChamadoModel

@{
    ViewData["Title"] = "Confirmar Exclusão de Chamado";
}

<div class="container">
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">⚠️ Atenção!</h4>
        <p>Você está prestes a excluir o chamado abaixo. Esta ação não pode ser desfeita.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Dados do Chamado</h5>
        </div>
        <div class="card-body">

            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <td><strong>ID</strong></td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td><strong>Título</strong></td>
                        <td>@Model.Titulo</td>
                    </tr>
                    <tr>
                        <td><strong>Descrição</strong></td>
                        <td>@Model.Descricao</td>
                    </tr>
                    <tr>
                        <td><strong>Categoria</strong></td>
                        <td>@Model.Categoria?.Nome</td>
                    </tr>
                    <tr>
                        <td><strong>Prioridade</strong></td>
                        <td>@Model.Prioridade</td>
                    </tr>
                    <tr>
                        <td><strong>Status</strong></td>
                        <td>@Model.Status</td>
                    </tr>
                    <tr>
                        <td><strong>Data de Abertura</strong></td>
                        <td>@Model.DataAbertura.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <td><strong>Data de Fechamento</strong></td>
                        <td>@Model.DataFechamento?.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <td><strong>Usuário Responsável</strong></td>
                        <td>@Model.Usuario?.Nome</td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-4">
                <h5 class="text-danger">Realmente deseja excluir o chamado "@Model.Titulo"?</h5>
            </div>

            <div class="mt-4">
                <form asp-action="Delete" method="post" style="display: inline;">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger btn-lg">
                        Sim, Excluir
                    </button>
                </form>|

                <a class="btn btn-secondary btn-lg" asp-controller="Chamado" asp-action="Index">
                    Voltar
                </a>
            </div>

        </div>

    </div>

</div>
