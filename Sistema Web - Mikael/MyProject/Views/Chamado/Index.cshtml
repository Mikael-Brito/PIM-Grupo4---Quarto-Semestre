@model List<MyProject.Models.ChamadoModel>

@{
    ViewData["Title"] = "Gerenciamento de Chamados";
    var usuarioLogadoNome = Context.Session.GetString("UsuarioLogadoNome");
    var usuarioLogadoId = Context.Session.GetInt32("UsuarioLogadoId");
    var usuarioLogadoIsAdmin = Context.Session.GetString("UsuarioLogadoIsAdmin") == "True";

    var chamadosFiltrados = usuarioLogadoIsAdmin
        ? Model
        : Model.Where(c => c.UsuarioId == usuarioLogadoId).ToList();
    var totalAbertos = chamadosFiltrados.Count(c => c.Status == "Aberto");
    var totalEmAndamento = chamadosFiltrados.Count(c => c.Status == "Em Andamento");
    var totalFechados = chamadosFiltrados.Count(c => c.Status == "Fechado");
    var totalCancelados = chamadosFiltrados.Count(c => c.Status == "Cancelado");

}

<link rel="stylesheet" href="~/css/plans_and_auth.css" asp-append-version="true" />

<div class="usuarios-container">
    <div class="header-section">
        <h1>Gerenciamento de Chamados</h1>

        @if (usuarioLogadoId.HasValue)
        {
            <div class="user-info">
                <div class="user-info-item">
                    <span class="user-info-label">Usuário Logado:</span>
                    <span>
                        @usuarioLogadoNome
                        @if (usuarioLogadoIsAdmin)
                        {
                            <span class="badge badge-admin">Administrador</span>
                        }
                        else
                        {
                            <span class="badge badge-user">Usuário</span>
                        }
                    </span>
                </div>
            </div>
        }

        <div class="header-actions">
            <a asp-controller="Chamado" asp-action="Create" class="btn-custom btn-primary-custom">
                ➕ Abrir Novo Chamado
            </a>
        </div>
    </div>

    <div class="content-section">
        @if (chamadosFiltrados.Any())
        {
            <div class="content-header d-flex justify-content-between align-items-center">
                <h2>Chamados Registrados (@chamadosFiltrados.Count)</h2>

                <div class="row mt-3 g-3" style="max-width: 420px;">
                    <div class="col-6">
                        <span class="badge bg-secondary w-75">
                            Abertos: @chamadosFiltrados.Count(c => c.Status == "Aberto")
                        </span>
                    </div>
                    <div class="col-6">
                        <span class="badge btn btn-edit w-75">
                            Em Andamento: @chamadosFiltrados.Count(c => c.Status == "Em Andamento")
                        </span>
                    </div>
                    <div class="col-6">
                        <span class="badge bg-success w-75">
                            Fechados: @chamadosFiltrados.Count(c => c.Status == "Fechado")
                        </span>
                    </div>
                    <div class="col-6">
                        <span class="badge bg-danger w-75 p-2">
                            Cancelados: @chamadosFiltrados.Count(c => c.Status == "Cancelado")
                        </span>
                    </div>
                </div>

                <div class="d-flex gap-2 align-items-center">
                    @* Filtro por usuário (apenas admin) *@
                    @if (usuarioLogadoIsAdmin)
                    {
                        <div>
                            <label for="filtroUsuario">Filtrar por Usuário:</label>
                            <select id="filtroUsuario" class="form-select" style="display:inline-block; width:auto;" onchange="filtrarChamados()">
                                <option value="todos">Todos</option>
                                @foreach (var user in Model.Select(c => c.Usuario).Distinct())
                                {
                                    if (user != null)
                                    {
                                        <option value="@user.Id">@user.Nome</option>
                                    }
                                }
                            </select>
                        </div>
                    }

                    @* Filtro por status (todos) *@
                    <div>
                        <label for="filtroStatus">Filtrar por Status:</label>
                        <select id="filtroStatus" class="form-select" style="display:inline-block; width:auto;" onchange="filtrarChamados()">
                            <option value="todos">Todos</option>
                            <option value="Aberto">Aberto</option>
                            <option value="Em Andamento">Em Andamento</option>
                            <option value="Fechado">Fechado</option>
                            <option value="Cancelado">Cancelado</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table id="tabelaChamados" class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Categoria</th>
                            <th>Prioridade</th>
                            <th>Status</th>
                            <th>Data Abertura</th>
                            <th>Data Fechamento</th>
                            <th>Usuário</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var chamado in chamadosFiltrados)
                        {
                            <tr data-status="@chamado.Status" data-usuario="@chamado.UsuarioId">
                                <td><strong>@chamado.Titulo</strong></td>
                                <td>@chamado.Categoria?.Nome</td>
                                <td>@chamado.Prioridade</td>
                                <td>
                                    @if (chamado.Status == "Aberto")
                                    {
                                        <span class="badge badge-user">Aberto</span>
                                    }
                                    else if (chamado.Status == "Em Andamento")
                                    {
                                        <span class="badge btn btn-edit">Em Andamento</span>
                                    }
                                    else if (chamado.Status == "Fechado")
                                    {
                                        <span class="badge btn btn-success">Fechado</span>
                                    }
                                    else
                                    {
                                        <span class="badge btn btn-danger">Cancelado</span>
                                    }
                                </td>
                                <td>@chamado.DataAbertura.ToString("dd/MM/yyyy")</td>
                                <td>@chamado.DataFechamento?.ToString("dd/MM/yyyy")</td>
                                <td>@chamado.Usuario?.Nome</td>

                                @if (chamado.Status == "Cancelado")
                                {
                                    <td class="btn-group w-100 justify-content-center">
                                        <a asp-controller="Chamado" asp-action="Details" asp-route-id="@chamado.Id" class="btn btn-action btn-info rounded-2">🔍 Detalhar</a>
                                        <a asp-controller="Chamado" asp-action="Delete" asp-route-id="@chamado.Id" class="btn btn-action btn-delete rounded-2">🗑️ Apagar</a>
                                    </td>
                                }
                                else if (chamado.Status == "Aberto")
                                {
                                    <td class="btn-group w-100 justify-content-center">
                                        <a asp-controller="Chamado" asp-action="Editar" asp-route-id="@chamado.Id" class="btn btn-action btn-edit rounded-2">✏️ Editar</a>
                                        <a asp-controller="Chamado" asp-action="Details" asp-route-id="@chamado.Id" class="btn btn-action btn-info rounded-2">🔍 Detalhar</a>
                                        <a asp-controller="Chamado" asp-action="Delete" asp-route-id="@chamado.Id" class="btn btn-action btn-delete rounded-2">🗑️ Apagar</a>
                                    </td>
                                }
                                else if (chamado.Status == "Em Andamento")
                                {
                                    <td class="btn-group w-100 justify-content-center">
                                        <a asp-controller="Chamado" asp-action="Editar" asp-route-id="@chamado.Id" class="btn btn-action btn-edit rounded-2">✏️ Editar</a>
                                        <a asp-controller="Chamado" asp-action="Details" asp-route-id="@chamado.Id" class="btn btn-action btn-info rounded-2">🔍 Detalhar</a>
                                    </td>
                                }
                                else if (chamado.Status == "Fechado")
                                {
                                    <td class="btn-group w-100 justify-content-center">
                                        <a asp-controller="Chamado" asp-action="Details" asp-route-id="@chamado.Id" class="btn btn-action btn-info rounded-2">🔍 Detalhar</a>
                                    </td>
                                }

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">📋</div>
                <h3>Nenhum chamado encontrado</h3>
                <a asp-controller ="Chamado" asp-action="Create" class="btn-add">
                    ➕ Abrir Novo Chamado
                </a>
            </div>
        }
    </div>
</div>

<script>
    function filtrarChamados() {
        const filtroStatus = document.getElementById('filtroStatus')?.value || 'todos';
        const filtroUsuario = document.getElementById('filtroUsuario')?.value || 'todos';
        const linhas = document.querySelectorAll('#tabelaChamados tbody tr');

        linhas.forEach(linha => {
            const status = linha.getAttribute('data-status');
            const usuario = linha.getAttribute('data-usuario');

            let mostrar = true;

            if (filtroStatus !== 'todos' && status !== filtroStatus) {
                mostrar = false;
            }

            if (filtroUsuario !== 'todos' && usuario !== filtroUsuario) {
                mostrar = false;
            }

            linha.style.display = mostrar ? '' : 'none';
        });
    }
</script>
