@model MyProject.Models.ChamadoModel

@{
    ViewData["Title"] = "Detalhes do Chamado";
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-3 text-primary">📋 Detalhes do Chamado</h5>
    </div>
    <div class="card-body">

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <td><strong>Título</strong></td>
                <td>@Model.Titulo</td>
            </tr>
            <tr>
                <td><strong>Descrição</strong></td>
                <td>@Model.Descricao</td>
            </tr>
            <tr>
                <td><strong>Categoria</strong></td>
                <td>@Model.Categoria?.Nome</td>
            </tr>
            <tr>
                <td><strong>Prioridade</strong></td>
                <td>@Model.Prioridade</td>
            </tr>
            <tr>
                <td><strong>Status</strong></td>
                <td>@Model.Status</td>
            </tr>
            <tr>
                <td><strong>Data de Abertura</strong></td>
                <td>@Model.DataAbertura.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <td><strong>Data de Fechamento</strong></td>
                <td>@Model.DataFechamento?.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <td><strong>Usuário Responsável</strong></td>
                <td>@Model.Usuario?.Nome</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-controller="Chamado" asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
            ✏️ Editar
        </a> |
        <a asp-controller="Chamado" asp-action="Index" class="btn btn-secondary">
            Voltar
        </a>
    </div>
</div>
