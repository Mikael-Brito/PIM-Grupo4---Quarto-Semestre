@model IList<MyProject.Models.ChamadoModel>

@{
    ViewData["Title"] = "Lista de Chamados";
}

<bodyChamado>
<p>
    <a asp-controller="Chamado" asp-action="Criar">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DataAbertura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DataFechamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAbertura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFechamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nome)
            </td>
            <td>
                <a asp-controller="Chamado" asp-action="Editar" asp-route-id="@item.Id">Edit</a>
                <a asp-controller="Chamado" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-controller="Chamado" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</bodyChamado>
