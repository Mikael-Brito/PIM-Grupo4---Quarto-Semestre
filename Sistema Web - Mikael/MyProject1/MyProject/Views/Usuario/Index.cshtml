@model List<MyProject.Models.UsuarioModel>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<div class="container">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-3">
        <a class="btn btn-primary" role="button" asp-controller="Usuario" asp-action="Criar">
            <i class="fas fa-plus"></i> Adicionar Novo Usuário
        </a>
    </div>

    <h1 class="display-4 mb-4">Lista de Usuários</h1>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nome</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Contato</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <th scope="row">@usuario.Id</th>
                            <td>@usuario.Nome</td>
                            <td>@usuario.Email</td>
                            <td>@usuario.Contato</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Ações do usuário">
                                    <a type="button" class="btn btn-sm btn-warning" 
                                       asp-controller="Usuario" asp-action="Editar" asp-route-id="@usuario.Id">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a type="button" class="btn btn-sm btn-danger" 
                                       asp-controller="Usuario" asp-action="Apagar" asp-route-id="@usuario.Id">
                                        <i class="fas fa-trash"></i> Apagar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">Nenhum usuário encontrado!</h4>
            <p>Não há usuários cadastrados no sistema.</p>
            <hr>
            <p class="mb-0">
                <a class="btn btn-primary" asp-controller="Usuario" asp-action="Criar">
                    Cadastrar primeiro usuário
                </a>
            </p>
        </div>
    }
</div>
