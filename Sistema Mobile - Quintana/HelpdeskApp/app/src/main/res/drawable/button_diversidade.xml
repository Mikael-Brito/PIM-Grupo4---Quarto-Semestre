<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/theme_ancestral_primary"
                android:endColor="@color/theme_ancestral_secondary"
                android:angle="45" />
            <corners android:radius="25dp" />
            <stroke android:width="2dp" android:color="@color/theme_ancestral_brown" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/theme_ancestral_secondary"
                android:endColor="@color/theme_ancestral_primary"
                android:angle="45" />
            <corners android:radius="25dp" />
            <stroke android:width="2dp" android:color="@color/theme_ancestral_accent" />
        </shape>
    </item>
</selector>
